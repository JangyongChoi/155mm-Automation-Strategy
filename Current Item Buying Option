        // --- Core Logic ---

        function initUI() {
            const grid = document.getElementById('catalog-grid');
            catalogItems.forEach(item => {
                const card = document.createElement('div');
                card.className = "card-animate bg-white rounded-[2.5rem] overflow-hidden flex flex-col border border-slate-100";
                card.innerHTML = `
                    <div id="img-box-${item.id}" class="image-container rounded-none">
                        <div class="flex flex-col items-center">
                            <div class="loader-ring mb-4"></div>
                            <p class="text-[10px] text-gray-400 font-black uppercase tracking-widest">AI Rendering...</p>
                        </div>
                    </div>
                    <div class="p-8 flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="text-xl font-black text-slate-900">${item.name}</h4>
                                <p class="text-[10px] text-blue-600 font-bold uppercase mt-1 tracking-widest">${item.maker}</p>
                            </div>
                            <span class="text-[10px] font-black text-amber-600 bg-amber-50 px-3 py-1 rounded-full border border-amber-200 uppercase">COTS Ready</span>
                        </div>
                        <div class="grid grid-cols-2 gap-y-4 gap-x-2 border-t border-slate-50 pt-4 mb-6">
                            ${item.specs.map(s => `<div class="flex items-center space-x-2 text-[10px] text-slate-500"><span class="w-1 h-1 bg-amber-500 rounded-full"></span><span>${s}</span></div>`).join('')}
                        </div>
                    </div>
                    <div class="p-6 bg-slate-50 border-t border-slate-100 flex justify-between items-center">
                        <div class="text-[9px] text-slate-400 font-bold uppercase">Estimated Unit Price</div>
                        <div class="text-xl font-black text-slate-900">${item.cost}</div>
                    </div>
                `;
                grid.appendChild(card);
            });
            initROIChart();
            
            // Auto-render all images on load
            catalogItems.forEach(item => generateImage(item.id, item.prompt));
        }

        async function generateImage(id, promptText, retry = 0) {
            const container = document.getElementById(`img-box-${id}`);
            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/imagen-4.0-generate-001:predict?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ instances: [{ prompt: promptText }], parameters: { sampleCount: 1 } })
                });

                if (!response.ok) throw new Error('Generation Error');
                const result = await response.json();
                const base64 = result.predictions[0].bytesBase64Encoded;
                const url = `data:image/png;base64,${base64}`;

                container.innerHTML = `<img src="${url}" onclick="openModal('${url}')" class="w-full h-full object-cover cursor-zoom-in hover:scale-105 transition duration-700" alt="${id}">`;
            } catch (err) {
                if (retry < 3) {
                    setTimeout(() => generateImage(id, promptText, retry + 1), 2000);
                } else {
                    container.innerHTML = `<div class="p-8 text-center"><p class="text-[9px] text-red-500 mb-2">Network Timeout</p><button onclick="window.location.reload()" class="text-[9px] underline uppercase">Retry</button></div>`;
                }
            }
        }

        function openModal(url) {
            document.getElementById('modalImg').src = url;
            document.getElementById('imageModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('imageModal').classList.add('hidden');
        }

        function initROIChart() {
            const ctx = document.getElementById('roiChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['24ë…„', '25ë…„', '26ë…„', '27ë…„', '28ë…„'],
                    datasets: [{
                        label: 'ëˆ„ì  ì ˆê°ì•¡ (ì–µì›)',
                        data: [-12, -4, 22, 58, 98],
                        borderColor: '#B45309',
                        backgroundColor: 'rgba(180, 83, 9, 0.1)',
                        fill: true,
                        tension: 0.4,
                        pointRadius: 4,
                        pointBackgroundColor: '#B45309'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { 
                        y: { display: false }, 
                        x: { grid: { display: false }, ticks: { font: { size: 10 }, color: '#94a3b8' } } 
                    }
                }
            });
        }

        window.onload = initUI;
    </script>
